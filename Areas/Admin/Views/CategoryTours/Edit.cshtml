@model projecttour.Models.CategoryTour

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="CategoryTours" asp-action="Index">Danh sách danh mục chuyến du lịch</a>
            <span class="breadcrumb-item active">Chỉnh sửa danh mục du lịch</span>
        </nav>
    </div>
</div>


<form asp-action="Edit" asp-route-id="@Model.CategoryTourId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CategoryTourId" />
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">CategoryTourName</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="CategoryTourName" placeholder="Role name">
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</form>
